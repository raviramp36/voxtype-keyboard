<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Animated background -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#FF6B6B"
                android:centerColor="#FF8E8E"
                android:endColor="#FFB3B3"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Pulsing glass overlay -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#50ffffff" />
            <stroke
                android:width="2dp"
                android:color="#80ffffff" />
        </shape>
    </item>
    
    <!-- Inner highlight -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#40ffffff"
                android:endColor="#10ffffff"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>