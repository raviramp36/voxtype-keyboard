<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Listening state background -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#4ECDC4"
                android:centerColor="#44A08D"
                android:endColor="#093637"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass overlay with stronger effect -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#50ffffff" />
            <stroke
                android:width="2dp"
                android:color="#80ffffff" />
        </shape>
    </item>
    
    <!-- Animated inner ring -->
    <item android:top="8dp" android:left="8dp" android:right="8dp" android:bottom="8dp">
        <shape android:shape="oval">
            <stroke
                android:width="2dp"
                android:color="#60ffffff" />
        </shape>
    </item>
    
</layer-list>