<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Processing state background -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#F093FB"
                android:centerColor="#F5576C"
                android:endColor="#4FACFE"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Spinning glass overlay -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#40ffffff" />
            <stroke
                android:width="1dp"
                android:color="#70ffffff" />
        </shape>
    </item>
    
    <!-- Inner processing indicator -->
    <item android:top="6dp" android:left="6dp" android:right="6dp" android:bottom="6dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#30ffffff"
                android:endColor="#10ffffff"
                android:angle="180"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>