<?xml version="1.0" encoding="utf-8"?>
<animation-list xmlns:android="http://schemas.android.com/apk/res/android"
    android:oneshot="false">
    
    <item android:duration="800">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4A90E2"
                android:centerColor="#667eea"
                android:endColor="#764ba2"
                android:angle="45"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <item android:duration="800">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#667eea"
                android:centerColor="#764ba2"
                android:endColor="#4A90E2"
                android:angle="90"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <item android:duration="800">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#764ba2"
                android:centerColor="#4A90E2"
                android:endColor="#667eea"
                android:angle="135"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
    <item android:duration="800">
        <shape android:shape="rectangle">
            <gradient
                android:startColor="#4A90E2"
                android:centerColor="#667eea"
                android:endColor="#764ba2"
                android:angle="180"
                android:type="linear" />
            <corners android:radius="20dp" />
        </shape>
    </item>
    
</animation-list>