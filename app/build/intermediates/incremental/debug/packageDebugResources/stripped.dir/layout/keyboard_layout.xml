<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/keyboard_background"
    android:padding="8dp">

    <!-- Status Text -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:textColor="@color/status_text"
        android:textSize="14sp"
        android:gravity="center"
        android:padding="4dp"
        android:visibility="gone"
 />

    <!-- Main Keyboard Area -->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Big Voice Button Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:padding="16dp">

            <!-- Progress Indicator -->
            <ProgressBar
                android:id="@+id/progress_bar"
                style="?android:attr/progressBarStyle"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:visibility="gone"
                android:indeterminateTint="@color/accent_color" />

            <!-- Main Voice Button -->
            <ImageButton
                android:id="@+id/voice_button"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_gravity="center"
                android:background="@drawable/button_idle"
                android:src="@drawable/ic_mic"
                android:scaleType="centerInside"
                android:padding="32dp"
                android:contentDescription="@string/voice_button_description"
                android:elevation="4dp" />

            <!-- Help Text -->
            <TextView
                android:id="@+id/help_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/tap_to_speak"
                android:textColor="@color/help_text"
                android:textSize="13sp"
                android:gravity="center"
 />

        </LinearLayout>

        <!-- Quick Actions Row -->
        <LinearLayout
            android:id="@+id/quick_actions"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="bottom"
            android:gravity="center"
            android:padding="8dp">

            <!-- Settings Button -->
            <ImageButton
                android:id="@+id/settings_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_settings"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:contentDescription="@string/settings" />

            <!-- Language Switch -->
            <ImageButton
                android:id="@+id/language_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_language"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:contentDescription="@string/switch_language" />

            <!-- Keyboard Switch -->
            <ImageButton
                android:id="@+id/keyboard_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_keyboard"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:contentDescription="@string/switch_keyboard" />

            <!-- Clear Text -->
            <ImageButton
                android:id="@+id/clear_button"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:src="@drawable/ic_clear"
                android:scaleType="centerInside"
                android:padding="8dp"
                android:layout_margin="4dp"
                android:contentDescription="@string/clear_text" />

        </LinearLayout>

    </FrameLayout>

    <!-- Mode Selector (Optional, hidden by default) -->
    <HorizontalScrollView
        android:id="@+id/mode_selector"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="4dp">

            <!-- Mode chips temporarily removed due to inflation issues -->
            <!-- Will use buttons or another approach instead -->

        </LinearLayout>

    </HorizontalScrollView>

</LinearLayout>