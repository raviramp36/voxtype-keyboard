<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    
    <!-- Background wave gradient -->
    <item>
        <shape android:shape="oval">
            <gradient
                android:startColor="#4A90E2"
                android:centerColor="#667eea"
                android:endColor="#764ba2"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
    <!-- Glass overlay -->
    <item android:top="2dp" android:left="2dp" android:right="2dp" android:bottom="2dp">
        <shape android:shape="oval">
            <solid android:color="#40ffffff" />
            <stroke
                android:width="1dp"
                android:color="#60ffffff" />
        </shape>
    </item>
    
    <!-- Inner glow -->
    <item android:top="4dp" android:left="4dp" android:right="4dp" android:bottom="4dp">
        <shape android:shape="oval">
            <gradient
                android:startColor="#30ffffff"
                android:endColor="#10ffffff"
                android:angle="135"
                android:type="linear" />
        </shape>
    </item>
    
</layer-list>