<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/keyboard_background"
    android:padding="8dp">

    <!-- Main Touch Area - Entire area is clickable for voice -->
    <FrameLayout
        android:id="@+id/voice_touch_area"
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:background="@drawable/glass_background"
        android:clickable="true"
        android:focusable="true">

        <!-- Linear Progress Bar at bottom (shows only when processing) -->
        <ProgressBar
            android:id="@+id/progress_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:layout_gravity="bottom"
            android:indeterminate="true"
            android:indeterminateTint="#ffffff"
            android:visibility="gone" />

        <!-- Invisible Voice Button (for ID compatibility) -->
        <View
            android:id="@+id/voice_button"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />

    </FrameLayout>

    <!-- Hidden Status Text (for ID compatibility) -->
    <TextView
        android:id="@+id/status_text"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone" />

    <!-- Hidden Feature Indicators (for ID compatibility) -->
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:visibility="gone">
        
        <TextView
            android:id="@+id/whisper_indicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
            
        <TextView
            android:id="@+id/privacy_indicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
            
        <TextView
            android:id="@+id/language_indicator"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:visibility="gone" />
            
    </LinearLayout>

    <!-- Action Buttons Row - Evenly spaced -->
    <LinearLayout
        android:id="@+id/quick_actions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="8dp">

        <Button
            android:id="@+id/settings_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="âš™ï¸"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/glass_button_small"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/language_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="ðŸŒ"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/glass_button_small"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/space_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="â£"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/glass_button_small"
            android:layout_marginEnd="4dp" />

        <Button
            android:id="@+id/backspace_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:drawableStart="@drawable/ic_backspace"
            android:drawableTint="#ffffff"
            android:background="@drawable/glass_button_small"
            android:layout_marginEnd="4dp"
            android:paddingStart="12dp"
            android:paddingEnd="12dp" />

        <Button
            android:id="@+id/clear_button"
            android:layout_width="0dp"
            android:layout_height="44dp"
            android:layout_weight="1"
            android:text="âŒ"
            android:textSize="20sp"
            android:textColor="#ffffff"
            android:background="@drawable/glass_button_small" />

    </LinearLayout>

</LinearLayout>